{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "paths": {
      "@lib/db": [
        "libs/db/src"
      ],
      "@lib/db/*": [
        "libs/db/src/*"
      ],
      "@app/server/*": [
        "apps/yumi-server/src/*"
      ],
      "@app/server": [
        "apps/yumi-server/src"
      ]
    }
  }
}